{
  "name": "Lynx",
  "description": "Modern, lightweight, and planet-scale link shortener + analytics + management!",
  "repository": "https://github.com/JaneJeon/Lynx",
  "website": "https://janejeon.github.io/Lynx",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    {
      "plan": "heroku-redis"
    },
    {
      "plan": "heroku-postgresql"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "env": {
    "BASE_URL": {
      "description": "the custom domain of this app; e.g. https://bit.ly (protocol required)"
    },
    "HOMEPAGE": {
      "description": "where the root domain should redirect to; e.g. https://bitly.com (protocol required)"
    },
    "SLACK_CLIENT_ID": {
      "description": ""
    },
    "SLACK_CLIENT_SECRET": {
      "description": ""
    },
    "SLACK_TEAM_ID": {
      "description": "",
      "required": false
    },
    "SLACK_TEAM_DOMAIN": {
      "description": "",
      "required": false
    },
    "SESSION_SECRET": {
      "description": "the session encryption key",
      "generator": "secret"
    }
  }
}
