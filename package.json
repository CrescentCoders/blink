{
  "name": "myurl",
  "version": "0.3.0",
  "description": "A blazing-fast, planet-scale, and easy-to-use serverless URL shortener!",
  "bin": "./bin/deploy.js",
  "repository": "JaneJeon/myURL",
  "author": "Jane Jeon <JaneJeon9719@gmail.com>",
  "license": "AGPL-3.0",
  "scripts": {
    "deploy": "node ./bin/deploy",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check '**/*.{js,md,json,yml,yaml}'",
    "test": "jest --forceExit",
    "test:watch": "yarn test --watch",
    "coverage": "is-ci && codecov",
    "clean": "rimraf reports coverage logs/*.log"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,md,json,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "plugins": [
      "prettier",
      "standard"
    ],
    "overrides": [
      {
        "files": "test/*.spec.js",
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@casl/ability": "^3.2.0",
    "@casl/mongoose": "^2.3.2",
    "chalk": "^2.4.2",
    "commander": "^3.0.1",
    "connect-ensure-login": "^0.1.1",
    "connect-mongo": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv-defaults": "^1.0.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.0.0",
    "express-request-id": "^1.4.1",
    "express-session": "^1.16.2",
    "got": "^9.6.0",
    "hashids": "^2.0.1",
    "hbs": "^4.0.5",
    "helmet": "^3.21.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.1",
    "mongoose-hidden": "^1.8.0",
    "mongoose-paginate-v2": "^1.3.1",
    "mongoose-sequence": "^5.2.1",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.9.1",
    "ms": "^2.1.2",
    "normalize-url": "^4.4.1",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "rate-limit-redis": "^1.6.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "codecov": "^3.6.1",
    "cross-env": "^6.0.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.5",
    "is-ci": "^2.0.0",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "lint-staged": "^9.3.0",
    "nodemon": "^1.19.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "string-natural-compare": "^2.0.3",
    "supertest": "^4.0.2",
    "supertest-session": "^4.0.0",
    "vuepress": "^1.1.0"
  },
  "keywords": [
    "url",
    "shortener",
    "bitly",
    "domain",
    "link",
    "express",
    "aws",
    "cloudfront",
    "cdn",
    "S3",
    "mongo",
    "mongodb",
    "mongoose"
  ]
}
